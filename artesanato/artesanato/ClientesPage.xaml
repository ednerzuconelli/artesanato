<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Arte.ClientesPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">

            <Entry x:Name="NomeCliente" Placeholder="Nome" TextColor="Black"/>

            <Entry x:Name="EmailCliente" Placeholder="Email" Keyboard="Email" TextColor="Black"/>

            <Entry x:Name="FoneCliente" Placeholder="Fone"  TextColor="Black"/>

            <Button x:Name="Salvar" Text="Salvar Dados" Clicked="SalvarClicked"/>

             <ListView x:Name="ListaCliente" BackgroundColor="White" />

        </StackLayout>

    </ContentPage.Content>
</ContentPage>